<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/id_life_weather_top"
        layout="@layout/top" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#106184"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/activity_life_words_btn_delicate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="单词练习"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/activity_life_words_btn_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="#66000000"
            android:gravity="center"
            android:text="单词搜索" />
    </RadioGroup>

    <com.beyole.util.indicator.PageIndicator
        android:id="@+id/activity_life_words_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:fades="false" >
    </com.beyole.util.indicator.PageIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_life_words_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>