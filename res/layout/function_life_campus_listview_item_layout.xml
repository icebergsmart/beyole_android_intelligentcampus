<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/function_loss_items_selector"
    android:minHeight="60.0dip"
    android:orientation="horizontal"
    android:padding="10.0dip" >

    <ImageView
        android:id="@+id/id_function_life_campus_lisview_item_iv_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="4dp" >

        <TextView
            android:id="@+id/id_function_life_campus_lisview_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="这是校内新闻第一个测试标题"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_function_life_campus_lisview_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="这是校内新闻的描述文字"
            android:textColor="#A1A1A1"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>