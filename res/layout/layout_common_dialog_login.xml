<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/llSuccessBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_btn_white_normal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dip10" >

        <TextView
            android:id="@+id/tvPromptMsg"
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:gravity="center"
            android:text="提示"
            android:textColor="#444444"
            android:textSize="@dimen/sp16" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/login_activity_lv_waitting_annimation"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:visibility="visible"
            app:indicator="BallTrianglePath"
            app:indicator_color="#106184" />
    </LinearLayout>

</RelativeLayout>