<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="2.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.beyole.view.EditTextWithRightButton
            android:id="@+id/id_function_search_words_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_search_bg"
            android:drawableLeft="@drawable/square_searchrecommend_search_icon"
            android:drawablePadding="6.0dip"
            android:hint="请输入要查找的单词~"
            android:minHeight="45.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_function_search_result_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/id_function_search_words_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </ListView>

        <TextView
            android:id="@+id/id_function_search_words_no_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="没有搜索结果"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>